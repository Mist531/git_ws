<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".launch4">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/purple1">
      <ScrollView
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:orientation="vertical"
         ></LinearLayout>
      </ScrollView>
      <LinearLayout
          android:layout_weight="7"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:background="@color/black"
          >
         <LinearLayout
             android:onClick="bottom1"
             android:layout_marginBottom="30dp"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             >
            <ImageView
                android:id="@+id/vector1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_vector"
                />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/serii"
                android:text="Главное"
                />

         </LinearLayout>
         <LinearLayout
             android:layout_marginBottom="30dp"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:onClick="bottom2"
             >
            <ImageView
                android:id="@+id/vector2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_vector1"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/serii"
                android:text="Подборка"
                />

         </LinearLayout>
         <LinearLayout
             android:layout_marginBottom="30dp"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:onClick="bottom3"
             >
            <ImageView
                android:id="@+id/vector3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_vector2"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/serii"
                android:text="Коллекция"
                />

         </LinearLayout>
         <LinearLayout
             android:layout_marginBottom="30dp"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:onClick="bottom4"
             >
            <ImageView
                android:id="@+id/vector4"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_vector4"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/serii"
                android:text="Профиль"
                />

         </LinearLayout>
      </LinearLayout>


   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>